%h1 Listing experiences
%table
  %thead
    %tr
      %th Company
      %th Job title
      %th Location
      %th Description
      %th Start date
      %th End date
      %th Resume
      %th
      %th
      %th
  %tbody
    - @experiences.each do |experience|
      %tr
        %td= experience.company
        %td= experience.job_title
        %td= experience.location
        %td= experience.description
        %td= experience.start_date
        %td= experience.end_date
        %td
          - if experience.resume
            = link_to experience.resume.title, experience.resume
        %td.ctl= link_to 'Show', experience
        %td.ctl= link_to 'Edit', edit_experience_path(experience)
        %td.ctl= link_to 'Destroy', experience, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Experience', new_experience_path
