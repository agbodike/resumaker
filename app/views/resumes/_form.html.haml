= form_for(@resume) do |f|
  - if @resume.errors.any?
    #error_explanation
      %h2= pluralize(@resume.errors.count, "error")
      prohibited this resume from being saved:

      %ul
      - @resume.errors.full_messages.each do |msg|
        %li= msg
  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :objective
    %br
    = f.text_area :objective, rows: 6, columns: 60
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :address
    %br
    = f.text_field :address
  .field
    = f.label :city
    %br
    = f.text_field :city
  .field
    = f.label :state
    %br
    = f.text_field :state
  .field
    = f.label :postal_code
    %br
    = f.text_field :postal_code
  .field
    = f.label :email
    %br
    = f.text_field :email
  .field
    = f.label :phone_number
    %br
    = f.text_field :phone_number
  .actions
    = f.submit
